echo "Update System"
sudo apt-get update

# Install SH
echo "Downloading and Install .user-env"
curl https://raw.githubusercontent.com/Sly321/home/master/.user-env --output ~/.user-env && echo ". ~/.user-env" >> ~/.bashrc

# Git
echo "Install git"
sudo apt-get install git-all

# Nodejs
echo "Install Nodejs"
curl -sL https://deb.nodesource.com/setup_9.x | sudo -E bash -
sudo apt-get install -y nodejs

# Yarn
echo "Install Yarn"
curl -sS https://dl.yarnpkg.com/debian/pubkey.gpg | sudo apt-key add -
echo "deb https://dl.yarnpkg.com/debian/ stable main" | sudo tee /etc/apt/sources.list.d/yarn.list
sudo apt-get update && sudo apt-get install yarn

# Docker
echo "Install Docker"
sudo apt-get remove docker docker-engine docker.io
sudo apt-get install \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo apt-key fingerprint 0EBFCD88
sudo add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"
sudo apt-get update
sudo apt-get install docker-ce
apt-cache madison docker-ce

# Postgres
echo "Install Postgres"
deb http://apt.postgresql.org/pub/repos/apt/ YOUR_UBUNTU_VERSION_HERE-pgdg main
wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | \
  sudo apt-key add -
sudo apt-get update
apt-get install postgresql-9.6

# Go
echo "Install Go"
curl https://dl.google.com/go/go1.9.4.linux-amd64.tar.gz --output ~/go.tar.gz
tar -C /usr/local -xzf ~/go.tar.gz
echo "export PATH=$PATH:/usr/local/go/bin" >> ~/.bashrc
export PATH=$PATH:/usr/local/go/bin